<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="css/style.css">
  <title>首页</title>
  <style>
        .box
        {
          width: 80%;
          margin-left: 10%;
          position: relative;
          margin-top: 10px;
        }
        table{
          border: 1px solid #EAEAEA;
        }
        table .ys:hover
        {
          background: #a3daff;
        }
        .sz-box
        {
          position: absolute;
          right: 45px;
          bottom: -41px;
        }
        .sz-box span
        {
          display:inline-block;
          width: 20px;
          height: 20px;
          text-align: center;
          color: white;
          background-color: #03a6ff;
        }
  </style>
</head>
<body>
      <%- include('head',{})%>
      <div class="box">
           <table  align="center" cellspacing="0"  width="1000" cellpadding="20">
                  <tr style="background:#41b6e6 ;">
                    <th>编号</th>
                    <th>作者</th>
                    <th>标题</th>
                    <th>内容</th>
                    <th>发表时间</th>
                    <th>编辑</th>
                    <th>删除</th>
                  </tr>
                  <% for(var i=0; i<list.length; i++){ %>
                    <tr align="center" class="ys">
                      <td><%= i+1%></td>
                      <td><%= list[i].author %></td>
                      <td><a href="/particulars?id=<%= list[i]._id %> "><%= list[i].title %></a></td>
                      <td><%= list[i].content %></td>
                      <td><%= list[i].time %></td>
                      <td><a href="/text?id=<%= list[i]._id %>">编辑</a></td>
                      <td><a href="/delete?id=<%= list[i]._id %>">删除</a></td>
                    </tr>
                  <%}%>
           </table>
           <div class="sz-box">
            <% for(var i=0; i<textls; i++) { %>
              <a href="/?page=<%= i+1 %>"><%= i+1 %></a>
            <% } %>
           </div>
      </div>
</body>
</html>